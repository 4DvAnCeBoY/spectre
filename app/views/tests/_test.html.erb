<tr id="test_<%= test.id %>" class="<%= "table-danger" unless test.pass?  %>">
  <th>
    <%= test.name %>
    <p><small>
      Browser: <%= test.browser %><br>
      Plaform: <%= test.platform %><br>
      Size: <%= test.width %>
    </small></p>
  </th>
  <td><%= link_to(image_tag(test.screenshot_baseline_thumbnail_url), test.screenshot_baseline.url) unless test.screenshot_baseline.nil? %></td>
  <td><%= link_to(image_tag(test.screenshot_thumbnail_url), test.screenshot.url) unless test.screenshot.nil? %></td>
  <td><%= link_to(image_tag(test.screenshot_diff_thumbnail_url), test.screenshot_diff.url) unless test.screenshot_diff.nil? %></td>
  <td>
    <span class="label label-<%= test.pass? ? 'success' : 'danger' %>"><%= test.pass? ? 'Passed' : 'Failed' %></span>
    <% if !test.baseline && test.screenshot %>
      <%= form_for(test, remote: true) do |f| %>
        <%= f.hidden_field :baseline, value: true %>
        <%= f.submit 'Set as baseline', class: 'btn btn-secondary btn-sm' %>
      <% end %>
    <% end %>
  </td>
</tr>
